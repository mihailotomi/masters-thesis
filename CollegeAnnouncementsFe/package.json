{
  "name": "masterteam-bdm-backofficev2-0",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build-staging": "NODE_ENV=staging && tsc && vite build",
    "type:check": "tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prettier": "prettier . --ignore-path .gitignore",
    "format:check": "npm run prettier -- --check",
    "format:fix": "npm run prettier -- --write",
    "validate": "run-p lint type:check format:check",
    "prepare": "husky install",
    "server:mock": "json-server --watch ./mock-data/table.json --port 3000",
    "serve": "serve -s build -p 3000"
  },
  "dependencies": {
    "@reduxjs/toolkit": "2.2.1",
    "bootstrap": "5.3.3",
    "classnames": "2.5.1",
    "history": "5.3.0",
    "moment": "2.30.1",
    "react": "^18.2.0",
    "react-bootstrap": "2.10.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "14.2.3",
    "react-icons": "5.0.1",
    "react-redux": "9.1.0",
    "react-router-dom": "6.22.2",
    "react-toastify": "10.0.4",
    "redux-persist": "6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.0.11",
    "json-server": "0.17.4",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "sass": "1.71.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "4.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts, tsx, js,css,md}": "prettier --write"
  }
}
